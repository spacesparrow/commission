{
	"name": "commission/task-skeleton",
	"description": "Skeleton for Commission test task",
	"keywords": [],
	"type": "project",
	"autoload": {
		"psr-4": {
			"App\\CommissionTask\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\CommissionTask\\Tests\\": "tests"
		}
	},
	"require": {
		"php": "^8.2",
		"ext-bcmath": "^8.2",
		"ext-curl": "^8.2",
		"ext-json": "^8.2",
		"brick/money": "^0.8",
		"symfony/dotenv": "^6.3",
		"symfony/yaml": "^6.3"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.13",
		"phpunit/phpunit": "^10",
		"roave/security-advisories": "dev-latest"
	},
	"config": {
		"sort-packages": true,
		"bin-dir": "bin"
	},
	"scripts": {
		"phpunit": "phpunit",
		"fix-cs": "php-cs-fixer fix",
		"test-cs": "php-cs-fixer fix --dry-run -v",
		"test": [
			"@phpunit",
			"@test-cs"
		],
		"post-root-package-install": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
			"@php -r \"file_exists('.php-cs-fixer.php') || copy('.php-cs-fixer.dist.php', '.php-cs-fixer.php');\""
		]
	}
}
